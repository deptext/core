{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://deptext.dev/schemas/stats.json",
  "title": "Stats Output",
  "description": "Statistics generated by the stats processor (FR-018, FR-019)",
  "type": "object",
  "required": ["file_count", "generated_at", "source", "package"],
  "properties": {
    "file_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of files in the source tree"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When these statistics were generated"
    },
    "source": {
      "type": "string",
      "enum": ["github"],
      "description": "Source of the analyzed code"
    },
    "package": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Package name"
        },
        "version": {
          "type": "string",
          "description": "Package version"
        }
      },
      "description": "Package identification"
    }
  }
}
